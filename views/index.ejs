<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Trek Bikes - Home</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRdoTNQM3FCF-84nZ-Mu7ffyT5zE3lxNypo4w&s" alt="Trek Bikes Logo" style="height:50px;">
    <h1>Trek Bikes</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/products/real">Products</a>
      <a href="/carts/609e12672f8fb814c89e5f00">Cart</a>
    </nav>
    <form method="GET" action="/">
      <input type="text" name="category" placeholder="Filter by category">
      <button type="submit">Filter</button>
    </form>
  </header>
  <main>
    <h2>Product Catalog</h2>
    <div id="products">
      <% products.forEach(product => { %>
        <div class="product-card">
          <img src="<%= product.thumbnails[0] %>" alt="<%= product.title %>">
          <h3><a href="/products/<%= product._id %>"><%= product.title %></a></h3>
          <p>Price: $<%= product.price %></p>
          <p>Stock: <%= product.stock %></p>
        </div>
      <% }); %>
    </div>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Trek Bikes</p>
  </footer>
</body>
</html>
